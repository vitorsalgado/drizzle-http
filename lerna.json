{
  "version": "3.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "benchmarks",
    "internal/*",
    "packages/*",
    "examples/*",
    "test"
  ],
  "ignoreChanges": [
    "docs",
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "docs",
        "*.md"
      ],
      "message": "chore(release): release %s"
    }
  }
}
