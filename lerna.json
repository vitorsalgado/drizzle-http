{
  "version": "0.0.1-alpha.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "benchmarks",
    "internal/*",
    "pkgs/*",
    "examples/*"
  ],
  "ignoreChanges": [
    "benchmarks",
    "assets",
    "docs",
    "examples",
    "internal",
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "docs",
        "examples",
        "benchmarks",
        "assets",
        "*.md"
      ],
      "message": "chore(release): publish %s"
    }
  }
}
