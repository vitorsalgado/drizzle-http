{
  "name": "@drizzle-http/monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:coverage": "npm test --coverage",
    "test:ci": "npm test --colors --coverage --ci",
    "test:failures": "npm test --onlyFailures",
    "prepare": "husky install",
    "bootstrap": "lerna bootstrap --hoist && lerna link",
    "build": "lerna run build",
    "coverage:upload": "codecov -f coverage/*.json",
    "lint": "eslint --ext .ts .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier 'pkgs/**' 'examples/**' 'benchmarks/**' 'scripts/**' --write --ignore-unknown",
    "prettier:ci": "npm run prettier --check",
    "release": "node scripts/release/index.js publish",
    "clean": "lerna clean && npm run clean:dist",
    "clean:dist": "lerna exec -- rm -rf dist && lerna exec -- rm -rf out && lerna exec -- rm -rf tsconfig.tsbuildinfo",
    "benchmark": "concurrently -k --kill-others-on-fail -s first \"node benchmarks/dist/server.js\" \"node -e 'setTimeout(() => {}, 1000)' && node benchmarks/dist/index.js\"",
    "postinstall": "husky install",
    "pkg:prepare": "node scripts/release/index.js prepare",
    "pkg:publish": "node scripts/release/index.js publish"
  },
  "engines": {
    "node": ">=12.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorsalgado/drizzle-http.git"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "url": "https://github.com/vitorsalgado"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitorsalgado/drizzle-http/issues"
  },
  "homepage": "https://github.com/vitorsalgado/drizzle-http",
  "workspaces": [
    "benchmarks",
    "internal/*",
    "pkgs/*",
    "examples/*"
  ],
  "keywords": [
    "http",
    "http client",
    "rest",
    "api",
    "undici",
    "node",
    "typescript",
    "decorator",
    "easy",
    "annotations"
  ],
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.4",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/runtime": "^7.16.3",
    "@drizzle-http/test-utils": "file:internal/test-utils",
    "@drizzle-http/undici": "file:pkgs/drizzle-http-undici",
    "@jest/types": "^27.2.5",
    "@types/benchmark": "^2.1.1",
    "@types/node": "^16.11.12",
    "@types/node-fetch": "^2.5.12",
    "@types/opossum": "^6.2.0",
    "@types/pino": "^7.0.5",
    "@types/puppeteer": "^5.4.4",
    "@types/superagent": "^4.1.13",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "clean-webpack-plugin": "^4.0.0",
    "codecov": "^3.8.3",
    "commander": "^8.3.0",
    "concurrently": "^6.4.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "fs-extra": "^10.0.0",
    "globby": "^12.0.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "pino": "^7.4.1",
    "pino-pretty": "^7.2.0",
    "pinst": "^2.1.6",
    "prettier": "^2.5.0",
    "puppeteer": "^12.0.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "10.4.0",
    "typescript": "^4.5.2",
    "undici": "^4.11.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
